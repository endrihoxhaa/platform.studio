{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": { "#*": ["src/*"] },
    "types": ["bun-types"]
  },
  "include": ["src", "scripts"],
  "exclude": ["dist", "node_modules"]
}
